<%= form_with(model: [:update_password, :app, user], html: {class: 'row g-3'}) do |form| %>
    <%= render partial: "layouts/partials/form_errors", locals: {errors: user.errors} %>
    
    <div class="row mb-3">
        <%= form.label :current_password, class: "col-md-4 col-lg-3 col-form-label" %>
        <div class="col-md-8 col-lg-9">
            <%= form.password_field :current_password, class: "form-control" %>
        </div>
    </div>

    <div class="row mb-3">
        <%= form.label :password, class: "col-md-4 col-lg-3 col-form-label" %>
        <div class="col-md-8 col-lg-9">
            <%= form.password_field :password, class: "form-control" %>
        </div>
    </div>

    <div class="row mb-3">
        <%= form.label :password_confirmation, class: "col-md-4 col-lg-3 col-form-label" %>
        <div class="col-md-8 col-lg-9">
            <%= form.password_field :password_confirmation, class: "form-control" %>
        </div>
    </div>
    
    <div class="text-center">
        <%= form.submit nil, class: 'btn btn-primary' %>
    </div>
<% end %>

