<%= form_with(model: [:app, project], html: {class: 'row g-3'}) do |form| %>
  <%= render partial: "layouts/partials/form_errors", locals: {errors: project.errors} %>
  
  <div class="col-4">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="col-4">
    <%= form.label :color, class: "form-label" %>
    <%= form.color_field :color, class: "form-control"  %>
  </div>

  <div class="col-4">
    <%= form.label :view, class: "form-label" %>
    <%= form.select :view, options_for_select(Project.views.map {|key, value| [key.titleize, Project.views.key(value)]}), {}, class: 'form-select' %>
  </div>

  <div class="col-4">
    <div class="form-check">
      <%= form.check_box :favorite, class: 'form-check-input' %>
      <%= form.label :favorite, class: "form-check-label" %>
    </div>
  </div>

  <div class="text-center">
    <%= form.submit nil, class: 'btn btn-primary' %>
    <% unless project.id.blank? %>
      <%= link_to "Show this project", [:app, @project], class: 'btn btn-info' %>
    <% end %>
    <%= link_to "Back to projects", app_projects_path, class: 'btn btn-secondary' %>
  </div>
<% end %>