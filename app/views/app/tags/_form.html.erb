<%= form_with(model: [:app, tag], html: {class: 'row g-3'}) do |form| %>
  <%= render partial: "layouts/partials/form_errors", locals: {errors: tag.errors} %>

  <div class="col-4">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="col-4"> 
    <%= form.label :color, class: "form-label" %>
    <%= form.color_field :color, class: "form-control" %>
  </div>

  <div class="col-4">
    <div class="form-check">
      <%= form.check_box :favorite, class: "form-check-input" %>
      <%= form.label :favorite, class: "form-check-label" %>
    </div>
  </div>

  <div class="text-center">
    <%= form.submit nil, class: 'btn btn-primary' %>
    <% unless tag.id.blank? %>
      <%= link_to "Show this tag", [:app, @tag], class: 'btn btn-info' %>
    <% end %>
    <%= link_to "Back to tags", app_tags_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
