<div class="pt-4 pb-2">
  <h5 class="card-title text-center pb-0 fs-4">Forgot your password?</h5>
  <p class="text-center small">Enter your e-mail change password</p>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'row g-3 needs-validation' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-12">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"   %>
  </div>

  <div class="col-12">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary w-100'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
