<div class="col-12">
  <p class="small mb-0">
    <%- if controller_name != 'sessions' %>
      Already have an account? <%= link_to "Log in", new_session_path(resource_name) %><br />
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      Don't have account? <%= link_to 'Create an account', new_registration_path(resource_name) %><br />
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      Forgot your <%= link_to "password?", new_password_path(resource_name) %><br />
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      Didn't receive  <%= link_to "confirmation instructions?", new_confirmation_path(resource_name) %><br />
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      Didn't receive  <%= link_to "unlock instructions?", new_unlock_path(resource_name) %><br />
    <% end %>
  </p>
</div>