<div class="col-12">
    <div class="text-center">
        <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
                <%= button_to User.btn_provider(provider).html_safe, omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "#{User.bg_btn_provider(provider)} mb-3"  %>
            <% end %>
        <% end %>
    </div>
</div>